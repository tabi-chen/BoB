{
  "name": "bob",
  "displayName": "BDD-Oriented Builder",
  "description": "BDD-Oriented Builder",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bob.featureCodeGen.genFeature",
        "title": "BoB: Generate a new feature and implementation file"
      },
      {
        "command": "bob.featureCodeGen.addScenario",
        "title": "BoB: Add a scenario to the cursor position"
      },
      {
        "command": "bob.featureCodeGen.addStep",
        "title": "BoB: Add a step to the cursor position"
      }
    ],
    "configuration": [
      {
        "title": "BoB settings",
        "properties": {
          "bob.newFeaturePath": {
            "description": "Path of new test created",
            "type": "string",
            "required": false,
            "default": "features/"
          },
          "bob.newStepImplPath": {
            "description": "Path of new step_impl created",
            "type": "string",
            "required": false,
            "default": "features/steps"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.26.0",
    "eslint-plugin-typescript": "^0.14.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "pre-commit": "^1.2.2",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "typescript-eslint-parser": "^22.0.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
